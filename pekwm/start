## Turn on/off system beep.
xset b off

## Disable CapsLock
setxkbmap -option ctrl:nocaps

## Compton
## NOTE: composition must be started before tint2

#bl-compositor --start --config /home/cthulhu/.pekwm/compton.conf -b
compton --config /home/cthulhu/.pekwm/compton.conf -b &

tint2 -c /home/cthulhu/.config/tint2/tint2rc &

aplay /home/cthulhu/.pekwm/taiko.wav &

# Launch network manager applet
(sleep 4s && nm-applet --sm-disable) &

conky -c /home/cthulhu/.pekwm/pek_conkyrc &

# Thunar daemon (Auto mounting external devices)
thunar --daemon &

xrandr --auto --output DVI-D-0 --mode 1920x1080 --right-of DVI-D-1 &

# Wallpaper
nitrogen --restore &

# Start xscreensaver
#xscreensaver -no-splash &

# Start volumeicon after a slight delay
(sleep 11s && volumeicon) &

#rox --pinboard Default &
